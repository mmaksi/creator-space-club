{
    "name": "auth-service",
    "version": "1.0.0",
    "description": "Authentication microservice using JWT and Google OAuth",
    "main": "index.js",
    "scripts": {
        "test": "cross-env NODE_ENV=test jest --watchAll --detectOpenHandles --no-cache",
        "test-clear-cache": "jest --watchAll --no-cache --clearCache",
        "dev": "cross-env NODE_ENV=development ts-node-dev --respawn src/index.ts",
        "dev:debug": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only --inspect -- src/index.ts",
        "start": "cross-env NODE_ENV=production node dist/index.js",
        "build": "rimraf dist && tsc",
        "env:dev": "node scripts/setup-env.js development",
        "env:prod": "node scripts/setup-env.js production",
        "validate:env": "ts-node ./src/scripts/validate-env.ts",
        "deploy": "npm run validate:env && npm run build && npm run start"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "setupFilesAfterEnv": [
            "./src/test/setup.ts"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mmaksi/event-exchange.git"
    },
    "keywords": [
        "auth",
        "jwt",
        "oauth",
        "microservices"
    ],
    "author": "Mark Maksi",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/mmaksi/event-exchange/issues"
    },
    "homepage": "https://github.com/mmaksi/event-exchange#readme",
    "dependencies": {
        "axios": "^1.7.7",
        "bcryptjs": "^2.4.3",
        "cookie-session": "^2.1.0",
        "dotenv": "^16.4.5",
        "express": "^4.21.0",
        "express-async-errors": "^3.1.1",
        "express-rate-limit": "^7.4.0",
        "express-validator": "^7.2.0",
        "form-data": "^4.0.1",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "mailgun.js": "^10.2.3",
        "mongoose": "^8.8.2",
        "morgan": "^1.10.0",
        "nodemailer": "^6.9.15",
        "pg": "^8.13.1"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cookie-session": "^2.0.49",
        "@types/express": "^4.17.21",
        "@types/hpp": "^0.2.6",
        "@types/jest": "^29.5.13",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/morgan": "^1.9.9",
        "@types/nodemailer": "^6.4.15",
        "@types/pg": "^8.11.10",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^8.14.0",
        "@typescript-eslint/parser": "^8.14.0",
        "cross-env": "^7.0.3",
        "eslint": "^9.14.0",
        "jest": "^29.7.0",
        "mongodb-memory-server": "^10.0.1",
        "prettier": "^3.3.3",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.6.2"
    }
}
